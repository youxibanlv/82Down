<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_bg">
    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wdp30"
        android:layout_marginTop="@dimen/wdp30"
        android:text="@string/recommend"
        android:textSize="@dimen/wdp28"
        android:paddingLeft="@dimen/wdp20"/>
    <com.a82down.app.view.NoScrollGridView
        android:id="@+id/gv_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/wdp5"
        android:verticalSpacing="@dimen/wdp5"
        android:numColumns="3"/>
</LinearLayout>