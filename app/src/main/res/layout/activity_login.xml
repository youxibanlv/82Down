<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_start"
    android:paddingLeft="@dimen/wdp88"
    android:paddingRight="@dimen/wdp88"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/wdp420">
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp70"
            android:background="@mipmap/bg_btn"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="@dimen/wdp18"
            android:inputType="textPassword"
            android:maxLength="32"
            android:padding="@dimen/wdp16"
            android:singleLine="true"
            android:textSize="@dimen/wdp28" />
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp70"
            android:layout_marginTop="@dimen/wdp35"
            android:background="@mipmap/bg_btn"
            android:drawableLeft="@mipmap/icon_pass"
            android:drawablePadding="@dimen/wdp18"
            android:inputType="textPassword"
            android:maxLength="32"
            android:padding="@dimen/wdp16"
            android:singleLine="true"
            android:textSize="@dimen/wdp28" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp70"
            android:layout_marginTop="@dimen/wdp35"
            android:background="@mipmap/bg_btn_login"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/wdp30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wdp70"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/wdp30"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/wdp10"
                android:text="@string/forget_pass"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/wdp30"
                android:layout_marginLeft="@dimen/wdp10"
                android:text="@string/register"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp90"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/wdp40"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btn_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_qq"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btn_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_weixin"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/btn_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_weibo"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp2"
        android:background="@color/bg_divider"
        android:layout_above="@id/layout_bottom"
        android:layout_marginBottom="@dimen/wdp10"/>

</RelativeLayout>