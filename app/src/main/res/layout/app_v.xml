<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/wdp120"
        android:layout_height="@dimen/wdp120"
        android:src="@mipmap/app_icon"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:layout_marginTop="@dimen/wdp20"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/wdp20"
         >
        <RatingBar
            style="@style/RatingBar.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:isIndicator="false"
            android:stepSize="1.0"
            android:rating="10"
            android:numStars="10"
            />
        <RatingBar
            android:id="@+id/app_score"
            style="@style/RatingBar.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:isIndicator="false"
            android:stepSize="1.0"
            android:rating="10"
            android:numStars="1"
            />
        <TextView
            android:id="@+id/app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="218M"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/app_install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_install"
        android:layout_marginTop="@dimen/wdp20"
        android:text="@string/install"
        android:gravity="center"/>
</LinearLayout>