<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wdp200"
    android:paddingLeft="@dimen/wdp20"
    android:paddingRight="@dimen/wdp20"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/wdp120"
        android:layout_height="@dimen/wdp120"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wdp160"
        android:layout_marginLeft="@dimen/wdp20"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="卡通农场，史上最强！"/>
        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:text="说到模拟经营类游戏，最为大众所知的大概就是在发布短短数天后就登顶安卓游戏下载榜的《卡通农场》了吧，堪称史上最强的农场游戏！"
            android:layout_marginTop="@dimen/wdp6"/>
        <TextView
            android:id="@+id/visitors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访问量：50"
            android:layout_gravity="right"/>
    </LinearLayout>
</LinearLayout>